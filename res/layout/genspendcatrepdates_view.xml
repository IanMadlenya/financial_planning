<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/makeReport"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/sDate"
        android:layout_marginBottom="48dp"
        android:layout_marginRight="20dp"
        android:onClick="onButtonClick"
        android:text="@string/generateReport" />

    <EditText
        android:id="@+id/sDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eDate"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="47dp"
        android:ems="10"
        android:hint="@string/StartDate"
        android:inputType="date"
        android:textSize="25sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/eDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/makeReport"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="86dp"
        android:ems="10"
        android:hint="@string/EndDate"
        android:inputType="date"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/enterDateRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Enter Date Range"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/fromDatesToAccountMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/makeReport"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/makeReport"
        android:layout_marginLeft="39dp"
        android:text="Back" 
        android:onClick="onButtonClick"/>

</RelativeLayout>