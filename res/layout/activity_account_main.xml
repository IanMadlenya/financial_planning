<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AccountMain" >

    <Button
        android:id="@+id/bLogout"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/logout"
        android:onClick="onButtonClick" />

    <Button
        android:id="@+id/bCreateAccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bLogout"
        android:layout_below="@+id/bLogout"
        android:layout_marginTop="51dp"
        android:text="@string/createAccount"
        android:textSize="20sp"
        android:onClick="onButtonClick" />

    <Button
        android:id="@+id/bViewSpendingCategoryReport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bViewAccount"
        android:layout_below="@+id/bViewAccount"
        android:layout_marginTop="54dp"
        android:text="@string/viewSpendingCategoryReport"
        android:textSize="20sp"
        android:onClick="onButtonClick" />

    <Button
        android:id="@+id/bViewAccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bCreateAccount"
        android:layout_below="@+id/bCreateAccount"
        android:layout_marginTop="57dp"
        android:text="@string/viewAccounts"
        android:textSize="20sp"
        android:onClick="onButtonClick" />

</RelativeLayout>
